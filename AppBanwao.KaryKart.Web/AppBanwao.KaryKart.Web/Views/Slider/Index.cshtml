@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
@using GridMvc.Html
@model List<AppBanwao.KarryKart.Model.Slider>

<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.min.js"></script>
<div class="row">

    <div class="col-md-12">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="active">Slider Details</li>

        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>Slides</h3>
        <hr />
        @Html.Grid(Model).Columns(columns =>
{
    columns.Add(data => data.SliderID).Titled("ID");
    columns.Add(data => data.Name).Titled("Name");
    columns.Add(data => data.OfferHeading).Titled("Offer Heading").Sortable(true);
    columns.Add(data => data.Offer).Titled("Offer Text").Sortable(true);
    columns.Add(data => data.Active).Titled("Active");
    columns.Add()
        .Titled("Actions")
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => @<a href="@Url.Action("Edit", "Slider", new { id = o.SliderID })" class="btn btn-info">Edit <i class="fa fa-edit"></i></a>);
}).WithPaging(20)

        <hr />

        <a href="@Url.Action("Upload","Slider")" class="btn btn-default">Upload Image <i class="fa fa-upload"></i></a>

    </div>
</div>
