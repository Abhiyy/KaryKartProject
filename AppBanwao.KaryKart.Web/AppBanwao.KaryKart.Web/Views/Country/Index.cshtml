@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

@using GridMvc.Html
@model List<AppBanwao.KarryKart.Model.Country>

<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.min.js"></script>
<div class="row">

    <div class="col-md-12">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="active">Country Details</li>

        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>Country</h3>
        <hr />
        @Html.Grid(Model).Columns(columns =>
{
    columns.Add(data => data.CountryID).Titled("ID");
    columns.Add(data => data.CountryName).Titled("Name");
    
    columns.Add()
        .Titled("Actions")
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => @<a href="@Url.Action("Edit", "Country", new { id = o.CountryID })" class="btn btn-info">Edit <i class="fa fa-edit"></i></a>);
}).WithPaging(20)

        <hr />

        <a href="@Url.Action("Create","Country")" class="btn btn-default">Create <i class="fa fa-plus"></i></a>

    </div>
</div>
