@{
    ViewBag.Title = "SizeDetails";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

@using GridMvc.Html
@model List<AppBanwao.KaryKart.Web.Models.SizeModel>

<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.min.js"></script>
<div class="row">

    <div class="col-md-12">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="active">Size Details</li>

        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>Size Types</h3>
        <hr />
        @Html.Grid(Model).Columns(columns =>
{
    columns.Add(data => data.SizeID).Titled("ID");
    columns.Add(data => data.SizeName).Titled("Name");
    columns.Add(data => data.SizeTypeName).Titled("Size Type");
    columns.Add()
        .Titled("Actions")
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => @<a href="@Url.Action("EditSizeType", "ProductSettings", new { id = o.SizeID })" class="btn btn-info">Edit <i class="fa fa-edit"></i></a>);
}).WithPaging(20)

        <hr />

        <a href="@Url.Action("CreateSize","ProductSettings")" class="btn btn-default">Create <i class="fa fa-plus"></i></a>

    </div>
</div>

