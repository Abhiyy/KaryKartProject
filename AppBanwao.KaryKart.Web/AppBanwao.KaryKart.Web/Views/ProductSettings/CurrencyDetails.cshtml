
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

@using GridMvc.Html
@model List<AppBanwao.KaryKart.Web.Models.CurrencyModel>

<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.min.js"></script>
<div class="row">

    <div class="col-md-12">
        <ul class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")">Home</a></li>
            <li class="active">Currency Details</li>

        </ul>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>Currency</h3>
        <hr />
        @Html.Grid(Model).Columns(columns =>
{
    columns.Add(data => data.CurrencyID).Titled("ID");
    columns.Add(data => data.CurrencyName).Titled("Name");
    columns.Add(data => data.ShortName).Titled("Short Name");
    columns.Add(data => data.CountryName).Titled("Country");
    columns.Add()
        .Titled("Actions")
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(o => @<a href="@Url.Action("EditCurrency", "ProductSettings", new { id = o.CurrencyID })" class="btn btn-info">Edit <i class="fa fa-edit"></i></a>);
}).WithPaging(20)

        <hr />

        <a href="@Url.Action("CreateCurrency","ProductSettings")" class="btn btn-default">Create <i class="fa fa-plus"></i></a>

    </div>
</div>
